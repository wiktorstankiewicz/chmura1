generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id             String     @id @default(uuid())
  player1        String
  player2        String
  player1Figure  Figure     @default(X)
  player2Figure  Figure     @default(O)
  startingFigure Figure?    @default(X)
  square1        Figure     @default(NONE)
  square2        Figure     @default(NONE)
  square3        Figure     @default(NONE)
  square4        Figure     @default(NONE)
  square5        Figure     @default(NONE)
  square6        Figure     @default(NONE)
  square7        Figure     @default(NONE)
  square8        Figure     @default(NONE)
  square9        Figure     @default(NONE)
  status         GameStatus @default(PENDING)
}

enum Figure {
  X
  O
  NONE
}

enum GameStatus {
  PLAYER_1_WON
  PLAYER_2_WON
  DRAW
  PENDING
  IN_PROGRESS
}
